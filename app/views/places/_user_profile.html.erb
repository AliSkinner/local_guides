<div id="user-profile-details" class="col-md-3">
  <h1 class="user-profile-name"></h1>
  <h3 id="user-profile-city"></h3>
  <span class="hidden" id="user-profile-user-id"></span>

  <div id="user-profile-activity">
    <div id="user-profile-activity-light"></div>
    <span id="user-profile-activity-status"></span>
  </div>
<br>
<br>
  <h4 id="user-profile-message" class="link">Message Me</h4>
  <h4 id="user-profile-rate" class="link">Rate Me</h4>
  <h4 id="user-profile-myplaces" class="link">My Places</h4>
  <div id="review-box">
    <textarea id="new-review" cols="30" rows="5" placeholder="Have you met this person? What did you this person's postings? Leave a rating..."></textarea>
    <button id="create-new-review">Post Rating</button>
  </div>

</div>

<div id="user-profile-pic" class="col-md-3">
  <img src="" id="user-profile-picture" >
</div>

<div id="user-profile-other" class="col-md-6 scroll">

  <div id="user-profile-reviews" class="col-md-12 scroll">
    <h4><span class="user-profile-name"></span>'s ratings </h4>
  </div>

  <div id="user-profile-places" class="col-md-12 scroll">
    <h4>Places posted by <span class="user-profile-name"></span></h4>
  
    <table id="user-profile-places-table"></table>
  </div>

  <div id="user-profile-chat" class="col-md-12 scroll">
    <h3>Do you like <strong><span class="user-profile-name"></span>'s</strong> posts? Send a message for more recommendations and up-to-date tips.</h3>
    <textarea id="new-mail-content" cols="50" rows="10" placeholder="Your message here..."></textarea>
    <br>
    <img src="https://s3-eu-west-1.amazonaws.com/local-guides/uploads/misc/paper-plane.svg" class="map-icon link" id="submit-mail-button">
    <h3 id="success">Email Sent</h3>
  </div>
</div>
